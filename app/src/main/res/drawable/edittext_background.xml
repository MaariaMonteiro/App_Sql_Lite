<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="@android:color/white"/>

    <!-- Borda -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- Cantos arredondados -->
    <corners android:radius="8dp"/>

    <!-- Padding interno -->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"/>
</shape>